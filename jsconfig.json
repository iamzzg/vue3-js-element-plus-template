{
  // 编译选项
  "compilerOptions": {
    // "target": "esnext",
    // "module": "esnext",
    // "strict": true,
    "jsx": "preserve",
    // "sourceMap": true,
    // "esModuleInterop": true,
    // "lib": ["ESNext", "DOM"],
    // 项目路径
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@/router": ["src/router/*"],
      "@/styles": ["src/styles/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
